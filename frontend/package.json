{
    "name": "flux",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng serve",
        "start": "npx concurrently --names \"angular,electron\" --prefix-colors \"magenta,cyan\" \"ng serve\" \"npx wait-on http://localhost:4200 && electron .\"",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "serve:ssr:flux": "node dist/flux/server/server.mjs",
        "electron": "ng build && electron ."
    },
    "type": "module",
    "private": true,
    "packageManager": "npm@11.5.2",
    "main": "main.js",
    "dependencies": {
        "@angular/common": "^21.1.0",
        "@angular/compiler": "^21.1.0",
        "@angular/core": "^21.1.0",
        "@angular/forms": "^21.1.0",
        "@angular/platform-browser": "^21.1.0",
        "@angular/platform-server": "^21.1.0",
        "@angular/router": "^21.1.0",
        "@angular/ssr": "^21.1.3",
        "electron-updater": "^6.8.3",
        "express": "^5.1.0",
        "rxjs": "~7.8.0",
        "tslib": "^2.3.0"
    },
    "devDependencies": {
        "@angular/build": "^21.1.3",
        "@angular/cli": "^21.1.3",
        "@angular/compiler-cli": "^21.1.0",
        "@types/express": "^5.0.1",
        "@types/node": "^20.17.19",
        "electron": "^40.6.0",
        "jsdom": "^27.1.0",
        "typescript": "~5.9.2",
        "vitest": "^4.0.8"
    }
}
