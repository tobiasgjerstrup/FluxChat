meta {
  name: Register (Get JWT)
  type: http
  seq: 3
}

post {
  url: {{URL}}/api/auth/register
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "username": "username",
    "password": "password",
    "email": "username"
  }
}

script:post-response {
  const token = res.body.token;
  bru.setEnvVar("JWT", token);
}

settings {
  encodeUrl: true
  timeout: 0
}
