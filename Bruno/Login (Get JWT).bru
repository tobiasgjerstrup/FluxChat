meta {
  name: Login (Get JWT)
  type: http
  seq: 1
}

post {
  url: {{URL}}/api/auth/login
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "username": "user",
    "password": "pass"
  }
}

script:post-response {
  const token = res.body.token;
  bru.setEnvVar("JWT", token);
}

settings {
  encodeUrl: true
  timeout: 0
}
