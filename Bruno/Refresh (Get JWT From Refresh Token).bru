meta {
  name: Refresh (Get JWT From Refresh Token)
  type: http
  seq: 3
}

post {
  url: {{URL}}/api/auth/refresh
  body: json
  auth: inherit
}

headers {
  Content-Type: application/json
  refresh-token: {{JWT_REFRESH}}
}

script:post-response {
  const token = res.body.token;
  if (token){
    bru.setEnvVar("JWT", token);
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
