{
    "compilerOptions": {
        "target": "ES2024",
        "module": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ES7", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
